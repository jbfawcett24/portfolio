---
const {dir, color} = Astro.props
---

<div style=`--color:${color}` class={dir}></div>

<style>
    div {
        position: absolute;
        border-left: 5px dashed rgba(var(--color), 0.3);
        height: 80px;
        width: 10px;
        padding: 0 5%;
        transition: border 0.3s ease;
    }
    div:hover {
        border-color: rgba(var(--color), 0.7);
    }
    .right {
        right: 20%;
    }
    .left {
        left: 20%;
    }
</style>