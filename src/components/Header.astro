---
import {Icon} from "astro-icon/components";
import HeaderLink from "./HeaderLink.astro";
---
<header>
  <a href="/" class="name">
    <img src="/Senior2024-64.jpg" class="header-icon">
    <h1>James Fawcett</h1>
  </a>
  <nav>
    <HeaderLink text="Home" icon="heroicons-solid:home" link="/" color="#D4B6F3"/>
    <HeaderLink text="About" icon="heroicons-solid:user" link="/#about" color="#86BAE2"/>
    <HeaderLink text="Skills" icon="heroicons-solid:code-bracket" link="/#skills" color="#A6ECA3"/>
    <HeaderLink text="Projects" icon="heroicons-solid:cpu-chip" link="/#projects" color="#FEEEA2"/>
    <HeaderLink text="Contact" icon="heroicons-solid:chat-bubble-left" link="/#contact" color="#E89595"/>
    <a href="/resume" id="resume">
      <Icon name="heroicons-solid:document-text"/>
      <span>Resume</span>
    </a>
  </nav>
</header>

<style>
  header {
    width: 100%;
    height: 70px;
    background-color: rgba(19, 17, 38, 0.9);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 10px;
    position: fixed;
    top: 0;
    left: 0;
  }
  nav {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-evenly;
    width: 60%;
  }
  .header-icon {
    width: 40px;
    aspect-ratio: 1/1;
    object-fit: cover;
    border-radius: 50%;
  }
  .name {
    display: flex;
    width: 40%;
    gap: 10px;
    align-items: center;
    padding: 0 10px;
    text-decoration: none;
    h1 {
      font-size: 1.2rem;
      color: white;
    }
  }
  #resume {
    background-color: #D4B6F3;
    text-decoration: none;
    color: black;
    padding: 1%;
    border-radius: 10px;
    width: 90px;
    transition: all 0.3s ease;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 6px;
  }
  #resume:hover {
    background-color: rgb(28, 25, 51);
    color: white;
  }
</style>
