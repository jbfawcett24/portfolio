---
//TODO: when you click on a link or on the background, hide menu
    import {Icon} from "astro-icon/components";
    import HeaderLink from "./HeaderLink.astro";
    import { Image } from "astro:assets"
    import header_image from "../assets/header-image.jpg"
---

<header>
    <a href="/#">
        <Image src={header_image} alt="header-icon" width="40" height="40" loading="eager"/>
        <h1>James Fawcett</h1>
    </a>
    <div id="icon-holder">
        <Icon name="heroicons-solid:bars-3" class="menu-toggle opened" id="hamburger"/>
        <Icon name="heroicons-solid:x-mark" class="menu-toggle closed hide" id="close"/>
    </div>
    <div id="menu-holder" class="hide">
        <div id="menu" class="hide">
            <HeaderLink text="Home" icon="heroicons-solid:home" link="/#" color="#D4B6F3"/>
            <HeaderLink text="About" icon="heroicons-solid:user" link="/#about" color="#86BAE2"/>
            <HeaderLink text="Skills" icon="heroicons-solid:code-bracket" link="/#skills" color="#A6ECA3"/>
            <HeaderLink text="Projects" icon="heroicons-solid:cpu-chip" link="/#projects" color="#FEEEA2"/>
            <HeaderLink text="Contact" icon="heroicons-solid:chat-bubble-left" link="/#contact" color="#E89595"/>
            <a href="/resume" id="resume">
                <Icon name="heroicons-solid:document-text"/>
                <span>Resume</span>
            </a>
        </div>
    </div>
</header>

<style>
    header {
        width: 100%;
        height: 70px;
        background-color: rgba(19, 17, 38, 0.9);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        position: fixed;
        top: 0;
        left: 0;
    }
    img {
        width: 40px;
        aspect-ratio: 1/1;
        object-fit: cover;
        border-radius: 50%;
    }
    a {
        text-decoration: none;
        padding: 0 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        gap: 10px;
        h1 {
            font-size: 1.2rem;
        }
    }
    #icon-holder {
        position: relative;
        width: 40px;
        height: 40px;
        cursor: pointer;
    }
    .menu-toggle {
        position: absolute;
        top: 0;
        left: 0;
        color: white;
        font-size: 2rem;
        transition: transform 0.4s ease, opacity 0.3s ease;
    }
    .hide {
        opacity: 0;
        transform: scale(0.5) rotate(-90deg);
    }

    #menu {
        height: calc(100vh - 70px);
        position: fixed;
        top: 0;
        right: 0;
        background-color: rgba(19, 17, 38, 0.9);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        width: auto;
        padding: 0 30px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        transition: transform 0.3s ease, opacity 0.4s ease, visibility 0.4s;
        transform: translateX(0);
        overflow: hidden;
    }

    #menu.hide {
        transform: translateX(100%);
        opacity: 0;
        visibility: hidden;
    }

    #resume {
        background-color: #D4B6F3;
        text-decoration: none;
        color: black;
        padding: 2%;
        border-radius: 10px;
        width: 90px;
        transition: all 0.3s ease;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 6px;
    }
    #resume:hover {
        background-color: rgb(28, 25, 51);
        color: white;
    }
    #menu-holder {
        background-color: rgba(19, 17, 38, 0.3);
        position: fixed;
        top: 70px;
        left: 0;
        right: 0;
        bottom: 0;
        width: 100%;
        height: calc(100vh - 70px);
        transition: transform 0.3s ease, opacity 0.4s ease, visibility 0.4s;
        transform: translateX(0);
        overflow: hidden;
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
    }
    #menu-holder.hide {
        transform: translateX(100%);
        opacity: 0;
        visibility: hidden;
    }
    header {
        z-index: 1000;
    }

    #menu-holder {
        z-index: 900;
    }

    #menu {
        z-index: 1001;
    }
</style>

<script>
    const icon_holder = document.querySelector("#icon-holder");
    const hamburger = document.querySelector('#hamburger');
    const close = document.querySelector('#close');
    const menu = document.querySelector('#menu');
    const menu_holder = document.querySelector("#menu-holder");

    icon_holder?.addEventListener('click', toggleMenu)

    menu_holder?.addEventListener('click', toggleMenu)

    function toggleMenu() {
        hamburger?.classList.toggle('hide')
        close?.classList.toggle('hide')
        menu?.classList.toggle('hide')
        menu_holder?.classList.toggle('hide');
    }
</script>
