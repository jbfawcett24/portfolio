---
import Section from "./Section.astro";
const { img, name, description, link, dir } = Astro.props
import {Image} from "astro:assets";
---

<Section id="name" color="254, 238, 162">
    <div class=`${dir} project`>
        <Image src={img} alt={name} width="300" height="300"/>
        <div>
            <h2>{name}</h2>
            <p>{description}</p>
            <a href={link} target="_blank">See More</a>
        </div>
    </div>
</Section>

<style>
    .project {
        display: flex;
        gap: 20px;
        margin-bottom: 0;
    }
    .right {
        flex-direction: row-reverse;
        text-align: right;
    }
    a {
        background-color: rgb(254, 238, 162);
        padding: 1%;
        text-decoration: none;
        border-radius: 10px;
        color: black;
        box-sizing: border-box;
        border: 2px solid rgba(254, 238, 162, 1);
        transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
    }
    a:hover {
        background-color: transparent;
        border: 2px solid rgba(254, 238, 162, 0.7);
        color: white;
    }
</style>