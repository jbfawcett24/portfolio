---
import Spacer from "./Spacer.astro";
import Project from "./Project.astro";
import DashLine from "./DashLine.astro";
---

<div id="projects">
    <Spacer height="70"/>
    <h1>Projects</h1>
    <div id="project-list">
        <Project name="MTG Board" img="https:placehold.co/20x20" description="I do cool things" link="https://www.github.com" dir="right"/>
        <DashLine color="254, 238, 162" dir="left"/>
        <Project name="Canvas Assignment Timer" img="https://placehold.co/20x20" description="task timer" link="https://www.github.com" dir="left"/
    </div>
    <a href="/projects">View All</a>
</div>

<style>
    div {
        margin-top: -40px;
        color: white;
        margin-bottom: 0;
    }
    h1 {
        color: rgba(254, 238, 162, 1);
        text-align: center;
    }
    a {
        color: white;
    }

</style>
