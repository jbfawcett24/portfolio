---
const {img, name} = Astro.props;
import {Image} from "astro:assets";
---

<div>
    <Image src={img} alt={name}/>
    <p>{name}</p>
</div>

<style>
    div {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        padding: 0 2%;
        border: 2px dashed rgba(255, 255, 255, 0.4);
        border-radius: 5px;
        transition: border 0.3s ease;
    }
    div:hover {
        border: 2px dashed white;
    }
    img {
        height: 30px;
        width: 30px;
        aspect-ratio: 1/1;
    }
</style>