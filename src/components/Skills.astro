---

import Spacer from "./Spacer.astro";
import Section from "./Section.astro";
import Skill from "./Skill.astro";
import jsImg from "../assets/javascript.png"
import cssImg from "../assets/css.png"
---

<div id="skills">
    <Spacer height="70"/>
    <div id="skills-holder">
        <h1>My Skills</h1>
        <div class="skill">
            <h2>Languages</h2>
            <div class="skill-flex">
                <Skill name="JavaScript" img={jsImg}/>
                <Skill name="CSS" img={cssImg}/>
            </div>
        </div>
        <div class="skill">
            <h2>Frameworks</h2>
        </div>
        <div class="skill">
            <h2>Tools</h2>
        </div>
        <div class="skill">
            <h2>Other</h2>
        </div>
    </div>
</div>

<style>
    #skills {
        color: white;
        margin: -40px auto auto;
    }
    h1 {
        color: rgba(166, 236, 163, 1);
        grid-column: 1/3;
        text-align: center;
    }
    .skill {
        color: white;
        margin: 10px auto;
        padding: 1%;
        border: 2px solid rgba(166, 236, 163, 0.3);
        width: 90%;
        border-radius: 10px;
        transition: border 0.3s ease;
        background-color: rgba(255, 255, 255, 0.05);
        padding-bottom: 2%;
    }
    h2 {
        text-align: center;
    }
    .skill:hover {
        border: 2px solid rgba(166, 236, 163, 0.7);
    }
    .skill-flex {
        display: flex;
        gap: 10px;
        justify-content: center;
    }
    #skills-holder {
        display: grid;
        grid-template-columns: 1fr 1fr;
    }
    @media screen and (max-width: 768px)  {
        h1 {
            text-align: center;
        }
    }
</style>